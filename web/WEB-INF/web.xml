<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>in.blogsphere.listener.DBConnectionListener</listener-class>
    </listener>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:oracle:thin:@//localhost:1521/xe</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>blogsphere</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>project</param-value>
    </context-param>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LikeServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.LikeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.CommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.SignOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailVerifyServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.EmailVerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadBlog</servlet-name>
        <servlet-class>in.blogsphere.servlet.UploadBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OTPVerifyServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.OTPVerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateProfile</servlet-name>
        <servlet-class>in.blogsphere.servlet.CreateProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.EditProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FgtPasswordServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.FgtPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBlogServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.DeleteBlogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBlogServlet</servlet-name>
        <servlet-class>in.blogsphere.servlet.EditBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LikeServlet</servlet-name>
        <url-pattern>/LikeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/CommentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/SignOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailVerifyServlet</servlet-name>
        <url-pattern>/EmailVerifyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadBlog</servlet-name>
        <url-pattern>/UploadBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OTPVerifyServlet</servlet-name>
        <url-pattern>/OTPVerifyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProfile</servlet-name>
        <url-pattern>/CreateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/EditProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FgtPasswordServlet</servlet-name>
        <url-pattern>/FgtPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBlogServlet</servlet-name>
        <url-pattern>/DeleteBlogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBlogServlet</servlet-name>
        <url-pattern>/EditBlogServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
